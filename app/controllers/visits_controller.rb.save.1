class VisitsController < ApplicationController
  before_action :set_visit, only: [ :show, :update, :destroy ]

  # GET /visits
  # GET /visits.json
  def index
    @visits = Visit.all
    render json: { "all_visits": @visits }
  end

  # GET /visits/1
  # GET /visits/1.json
  def show
    render json: @visit
  end

  # POST /visits
  # POST /visits.json
  def create
    #@visit = params[:visits]
    Visit.create(visit_params) #save to batch to database mongoid awesome
    
  end

  # PATCH/PUT /visits/1
  # PATCH/PUT /visits/1.json
  def update
    @visit = Visit.find(params[:id])

    if @visit.update(visit_params)
      head :no_content
    else
      render json: @visit.errors, status: :unprocessable_entity
    end
  end

  # DELETE /visits/1
  # DELETE /visits/1.json
  def destroy
    #visit = Visit.find(params[:id])
    @visit.destroy
    #render json: visit

    head :no_content
  end

  private

    def set_visit
      @visit = Visit.find(params[:id])
    end

    def visit_params
      params[].permit([ :entry_time, :exit_time, :accuracy, :user_id, :longitude, :latitude ])
    end
end
